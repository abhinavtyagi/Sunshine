<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aktyagi.com.sunshine.DetailActivityFragment"
    android:orientation="horizontal"
    android:gravity="center_vertical|center_horizontal">

    <!-- Day and Date-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_day"
            android:textSize="@dimen/font_regular_size_detail"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_date"
            android:textSize="@dimen/font_regular_size_detail"/>
    </LinearLayout>

    <!-- Hi Lo Temps -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x_separation_detail_frag_views">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_tempHi"
            android:textSize="@dimen/font_hi_size"
            android:textAlignment="center"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_tempLow"
            android:textSize="@dimen/font_low_size"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/x_separation_detail_frag_views">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_icon"
            android:layout_weight="4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_desc"
            android:textSize="@dimen/font_regular_size_detail"
            android:layout_weight="1"
            />
        <!-- Humidity Wind and Pressure Below Weather Icon and Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_humidity"
            android:textSize="@dimen/font_regular_size_detail"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_wind"
            android:textSize="@dimen/font_regular_size_detail"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_pressure"
            android:textSize="@dimen/font_regular_size_detail"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
