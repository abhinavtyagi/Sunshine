<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/frag_detail_wide_padding_left"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/frag_detail_wide_padding_top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aktyagi.com.sunshine.DetailActivityFragment"
    android:orientation="horizontal">

    <!-- Day and Date-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="18"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_day"
            android:textSize="@dimen/detail_frag_font_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_detailFragment_date"
            android:textSize="@dimen/detail_frag_font_small"
            android:textColor="#646464"/>
    </LinearLayout>

    <!-- Hi Lo Temps -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="67"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x_separation_detail_frag_views">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_detailFragment_tempHi"
                android:textSize="@dimen/detail_frag_font_hi_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_detailFragment_tempLow"
                android:textSize="@dimen/detail_frag_font_low_size"
                android:textColor="#646464"
                />
            <!-- Humidity Wind and Pressure Below Hi and Low temperature-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_detailFragment_humidity"
                android:textSize="@dimen/detail_frag_font_normal"
                android:paddingTop="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_detailFragment_wind"
                android:textSize="@dimen/detail_frag_font_normal"
                android:paddingTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_detailFragment_pressure"
                android:textSize="@dimen/detail_frag_font_normal"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x_separation_detail_frag_views">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_detailFragment_icon"
                android:layout_weight="4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_detailFragment_desc"
                android:textSize="@dimen/detail_frag_font_normal"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
